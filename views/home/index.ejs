                  <td><%= getdate(item.checkOutAt) %></td>
                  <td><%= item.totalTime %></td>
                  <td><a href="/img/attendance/<%= item.imageCheckIn %>"><%= item.imageCheckIn %></a></td>
                  <td><a href="/img/attendance/<%= item.imageCheckIn %>"><%= item.imageCheckOut %></a></td>
