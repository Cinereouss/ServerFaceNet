                    <span
                      class="badge badge-pill badge-soft-danger font-size-12"
                      >Thất bại</span
                    >
                    <% } %>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- end table-responsive -->
