<script>
    $("#diemdanh").addClass("active")
</script>
<style>
    .img-icon{
        float: left;
        padding-top: 4%;
    }
</style>
<div class="container-fluid">
    <div class="row">
        <% data.forEach(function (rec) { %>
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-warning card-header-icon">
                        <img class="img-icon" src="img/attendance/<%=rec.imageCheckIn%>" height="70px">
                        <h4 class="card-title" style="padding-top: 6%"><%=rec.idLearner.name%></h4>
                        <p class="card-category">Check In : <% if(rec.checkInAt == "missing"){var prin = "Missing"}else {timeIn = new Date(rec.checkInAt); var prin = timeIn.getHours() +":"+ timeIn.getMinutes() +"p ngày "+ timeIn.getDay() +"/"+ timeIn.getMonth()}%> <%= prin %></p>
                        <p class="card-category">Check Out: <% if(rec.checkOutAt == "missing"){var prinO = "Missing"}else {timeOut = new Date(rec.checkOutAt); var prinO = timeOut.getHours() +":"+ timeOut.getMinutes() +"p ngày "+ timeOut.getDay() +"/"+ timeOut.getMonth()}%> <%= prinO %></p>
                        <p class="card-category">Total Time: <%= rec.totalTime %></p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons text-danger">assignment</i>
                            <a href="#pablo">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        <%})%>
    </div>
</div>
